{
  "manifest_version": 3,
  "name": "Twitch Drops Tracker",
  "version": "1.1.0",
  "description": "Track your Twitch drops campaigns and progress, sorted by expiration date",
  "permissions": [
    "storage",
    "cookies",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://gql.twitch.tv/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/drops/*"],
      "js": ["content-main.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://www.twitch.tv/drops/*"],
      "js": ["content-isolated.js"],
      "run_at": "document_start"
    }
  ]
}
